<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Booksy" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:colorBackground">@color/black</item>
        <item name="colorSurface">@color/black</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="buttonStyle">@style/BooksyButton.White</item>

        <item name="android:fontFamily">@font/volkhov_family</item>
        <item name="fontFamily">@font/volkhov_family</item>
    </style>


    <style name="BooksyButton.White" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="shapeAppearance">@style/BooksyButtonShape</item>
        <item name="android:fontFamily">@font/volkhov_family</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="TextButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BooksyButtonShape" parent="ShapeAppearance.Material3.Corner.None">
        <item name="cornerSize">8dp</item>
    </style>
</resources>
