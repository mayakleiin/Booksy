<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Booksy" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorSurface">@color/booksy_surface</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:colorBackground">@color/booksy_background</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="buttonStyle">@style/BooksyButton.White</item>
        <item name="fontFamily">@font/volkhov_family</item>
    </style>

    <!-- BooksyText base -->
    <style name="BooksyText" parent="TextAppearance.Material3.BodyMedium">
        <item name="fontFamily">@font/volkhov_family</item>
        <item name="android:textColor">@color/booksy_text_primary</item>
    </style>

    <!-- Titles -->
    <style name="BooksyText.Header" parent="BooksyText">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BooksyText.Title" parent="BooksyText">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BooksyText.Subtitle" parent="BooksyText">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/booksy_text_primary</item>
    </style>

    <!-- Body -->
    <style name="BooksyText.Body" parent="TextAppearance.Material3.BodyMedium">
        <item name="fontFamily">@font/poppins_family</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/booksy_text_secondary</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="BooksyText.BodyBold" parent="BooksyText.Body">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/booksy_text_primary</item>
    </style>

    <style name="BooksyText.Label" parent="TextAppearance.Material3.BodySmall">
        <item name="fontFamily">@font/poppins_family</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/booksy_text_tertiary</item>
    </style>

    <style name="BooksyText.Value" parent="TextAppearance.Material3.BodyMedium">
        <item name="fontFamily">@font/poppins_family</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/booksy_text_primary</item>
    </style>

    <!-- Buttons -->
    <style name="BooksyButton.White" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="shapeAppearance">@style/BooksyButtonShape</item>
        <item name="fontFamily">@font/volkhov_family</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="BooksyButton.Danger" parent="BooksyButton.White">
        <item name="android:backgroundTint">@color/booksy_danger</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BooksyButton.Secondary" parent="BooksyButton.White">
        <item name="android:backgroundTint">@color/booksy_button_secondary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BooksyButtonShape" parent="ShapeAppearance.Material3.Corner.None">
        <item name="cornerSize">8dp</item>
    </style>

    <style name="BooksyDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/booksy_divider</item>
    </style>

    <style name="BooksyCard" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">@color/booksy_surface</item>
    </style>
</resources>

