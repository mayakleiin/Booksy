<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/booksy_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top bar with back button -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Back button -->
            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_arrow_back"
                android:background="@drawable/back_button_bg"
                android:padding="12dp"
                android:contentDescription="Back"
                android:layout_margin="16dp" />
        </FrameLayout>

        <!-- Book cover with gradient overlay -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <ImageView
                android:id="@+id/book_cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="@string/book_cover_desc" />

            <View
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="bottom"
                android:background="@drawable/gradient_overlay" />
        </FrameLayout>

        <!-- Book details section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Book title and author -->
            <TextView
                android:id="@+id/title"
                style="@style/BooksyText.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/book_title"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/author"
                style="@style/BooksyText.BodyBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/author"
                android:layout_marginTop="4dp" />

            <!-- Book statistics -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <!-- Distance -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/BooksyText.Label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Distance" />

                    <TextView
                        android:id="@+id/distance"
                        style="@style/BooksyText.Subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/distance" />
                </LinearLayout>

                <!-- Pages -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/BooksyText.Label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pages" />

                    <TextView
                        android:id="@+id/pages"
                        style="@style/BooksyText.Subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pages" />
                </LinearLayout>

                <!-- Language -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/BooksyText.Label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Language" />

                    <TextView
                        android:id="@+id/language"
                        style="@style/BooksyText.Subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/language" />
                </LinearLayout>

                <!-- Genre -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/BooksyText.Label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Genre" />

                    <TextView
                        android:id="@+id/bookGenre"
                        style="@style/BooksyText.Subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fiction, Fantasy" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Ask from section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                style="@style/BooksyText.Header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ask_from" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ownerImage"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_user_placeholder"
                    app:civ_border_width="0dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:id="@+id/ownerName"
                        style="@style/BooksyText.BodyBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/owner_name" />

                    <TextView
                        android:id="@+id/openMapButton"
                        style="@style/BooksyText.Body"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/open_map"
                        android:textColor="@color/booksy_text_tertiary"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true" />
                </LinearLayout>

                <Button
                    android:id="@+id/borrowButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ask"
                    style="@style/BooksyButton.White" />
            </LinearLayout>
        </LinearLayout>

        <!-- About section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                style="@style/BooksyText.Header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about" />

            <TextView
                android:id="@+id/about"
                style="@style/BooksyText.Body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/book_description"
                android:layout_marginTop="12dp" />
        </LinearLayout>

        <!-- Owner actions (only visible to owner) -->
        <LinearLayout
            android:id="@+id/ownerActionsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:visibility="gone">

            <Button
                android:id="@+id/editButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit Book"
                style="@style/BooksyButton.White" />

            <Button
                android:id="@+id/deleteButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delete Book"
                android:layout_marginTop="8dp"
                style="@style/BooksyButton.Danger" />

            <Button
                android:id="@+id/returnButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Return Book"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                style="@style/BooksyButton.White" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>