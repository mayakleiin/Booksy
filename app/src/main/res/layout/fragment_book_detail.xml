<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/booksy_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Book cover -->
            <ImageView
                android:id="@+id/book_cover"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:contentDescription="@string/book_cover_desc" />

            <!-- Back button with transparent background -->
            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_arrow_back"
                android:background="@drawable/circular_button_bg"
                android:padding="12dp"
                android:contentDescription="Back"
                android:layout_margin="16dp" />
        </FrameLayout>

        <!-- Book details card -->
        <androidx.cardview.widget.CardView
            style="@style/BooksyCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-20dp"
            android:layout_marginHorizontal="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/title"
                    style="@style/BooksyText.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/book_title"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/author"
                    android:textColor="@color/booksy_text_secondary"
                    android:layout_marginTop="4dp" />

                <View style="@style/BooksyDivider"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp" />

                <!-- Info row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/distance"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/distance"
                        android:gravity="center"
                        android:textColor="@color/booksy_text_secondary" />

                    <TextView
                        android:id="@+id/pages"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/pages"
                        android:gravity="center"
                        android:textColor="@color/booksy_text_secondary" />

                    <TextView
                        android:id="@+id/language"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/language"
                        android:gravity="center"
                        android:textColor="@color/booksy_text_secondary" />
                </LinearLayout>

                <!-- Genre section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Genre"
                    android:textColor="@color/booksy_text_tertiary"
                    android:textSize="14sp"
                    android:layout_marginTop="12dp" />

                <TextView
                    android:id="@+id/bookGenre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fiction, Fantasy"
                    android:textColor="@color/booksy_text_primary" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Owner info card -->
        <androidx.cardview.widget.CardView
            style="@style/BooksyCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    style="@style/BooksyText.Subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ask_from"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/ownerImage"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_user_placeholder"
                        android:layout_marginEnd="8dp"
                        android:scaleType="centerCrop" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/ownerName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/owner_name"
                            android:textColor="@color/booksy_text_primary"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/openMapButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/open_map"
                            android:textSize="12sp"
                            android:textColor="#1E88E5"
                            android:clickable="true"
                            android:focusable="true" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Book description card -->
        <androidx.cardview.widget.CardView
            style="@style/BooksyCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    style="@style/BooksyText.Subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/about"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/book_description"
                    android:textColor="@color/booksy_text_secondary" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Action buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <Button
                android:id="@+id/borrow_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ask"
                style="@style/BooksyButton.White" />

            <Button
                android:id="@+id/editButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit Book"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                style="@style/BooksyButton.White" />

            <Button
                android:id="@+id/deleteButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delete Book"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                style="@style/BooksyButton.Danger" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>